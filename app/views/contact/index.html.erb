    }

    select {
      height: 40px;
      width:150px;
      border:none;
      border-radius: 0;
      background:rgba(255,255,255,0.4);

    }

    .text-container p {
      color:white;
      top:170px;
      left: 30px;
      position: absolute;
      font-size:11px;
      font-family:Helvetica, sans-serif;
      font-weight: 100;
