  canvas {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 999999999999999999999999999999999999;
  }

  .text-container {
    position: absolute;
    top:100px;
    left: 0;
    width:100%;
    height: 100%;
    z-index: 9999999999999999;
  }

    .text-container h1 {
      font-size:20px;
      letter-spacing: 20px;
      font-family: 'Helvetica', cursive;
      font-weight: 100;
      color:white;
      position: absolute;
      text-align:center;
      margin-top:50px;
      top:50px;
      left:50px;
      text-shadow:
          0 0 2px rgba(255,255,255,1),
          0 0 10px rgba(255,255,255,1),
          0 0 20px rgba(255,255,255,1),
          0 0 30px rgba(255,255,255,1),
          0 0 40px rgba(10,255,100,0.1),
          0 0 70px rgba(10,255,100,0.1),
          0 0 80px rgba(10,255,100,0.1),
          0 0 100px rgba(10,255,100,0.1);
      animation: flicker 100ms ease-in-out forwards 5;
    }

    .text-container h1::after {
      content: "";
      display: block;
      position:absolute;
      bottom: 11px;
      left: -7px;
      width:0%;
      box-shadow:0 0 16px #0d450d, inset 0 0 14px #0d450d;
      height:1px;
      background:red;
      animation: line 5s ease-in-out forwards;

    }

    @keyframes line {
      0%{
        box-shadow:0 0 16px white, inset 0 0 14px white;

        width: 0;
      }
      100%{
        box-shadow:0 0 16px #0d450d, inset 0 0 14px #0d450d;

        width: 100%;
      }
    }



    @keyframes flicker {
      0%{
        opacity: 0;
      }
      100%{
        opacity: 1;
      }
    }


    .form {
      width:100%;
      height:200px;
      margin-top:250px;
    }

    .form form {
      display: block;
      margin: 0 auto;
      text-align: center;
    }

    .form input {
      width:200px;
      height:40px;
      border:none;
      background:rgba(255,255,255,0.4);
      color:black;
      font-weight:bold;
      font-size:11px;

    }

  ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
    color: black;
    font-family: Helvetica, sans-serif;
    font-weight: 100;
    letter-spacing:2px;
  }

    * {
      outline: none;
    }

    .form form button {
      width: 300px;
      height:30px;
      background:#0d450d;
      border:none;
      color:white;
      display: block;
      margin:0 auto;
      font-family: Helvetica,sans-serif;
      letter-spacing: 2px;
      font-weight:100;
      margin-top:50px;
      font-size:10px;
      cursor: pointer;
      position: relative;
    }

    .form form button::after {
      content: "";
      display: block;
      width: 0;
      height:100%;
      background:rgba(0,200,0,0.1);
      position: absolute;
      top:0;
      left:0;
      transition: all 300ms ease-in-out;
    }

    .form form button:hover::after {
