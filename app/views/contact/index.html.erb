<style>
  body{
    margin: 0px;
    overflow: hidden;
    background:red;
    background-image: radial-gradient(ellipse farthest-corner at center top, #124b12 0%, #000000 60%);
    perspective: 900px;
  }

  .right-text ul {
    float:right;
    display: inline;
    margin-right: 20px;
  }

  .right-text ul li {
    display: inline;
    color:white;
    font-size:9px;
    font-family: "Helvetica", sans-serif;
    font-weight: 100;
    letter-spacing: 4px;
    margin-left: 10px;
  }


  .right-text ul li img {
    width:12px;
    height: 12px;
    filter: invert(100%);
    transform: translateY(2px);

  }

  .footer p {
    position: absolute;
    left:20px;
    top:11px;
    font-size:9px;
    color:white;
    letter-spacing: 3px;
    font-family: "Helvetica", sans-serif;
    font-weight: 100;

