    }


  .footer p{
    color:white;
    position: absolute;
    top:0;
    left:10px;
  }

  @media only screen and (max-width: 1030px) {
    .form form input {
      width:90%;
      margin-top:3px;
    }
    .form form select {
      width:90%;
      margin-top:3px;
    }
  }
    @media only screen and (max-width: 600px) {
    .form form input {
      width:90%;
      margin-top:3px;
    }
    .form form select {
      width:90%;
      margin-top:3px;
    }
  }


    @media only screen and (max-width: 300px) {
    .form form input {
      width:90%;
      margin-top:3px;
    }
    .form form select {
      width:90%;
      margin-top:3px;
    }
  }

  form {
    transition: all 300ms ease-in-out;
  }
    .go-out {
      opacity: 0;
    }

    .text-inner {
      margin-top:-100px;
    }

    .text-inner h1, .text-inner p {
      transform:translateY(-100px);
    }

  .inner-fixed-nav h1 span {
    transition: all 300ms ease-in-out;
    position: relative;
    cursor: pointer;
  }

  .inner-fixed-nav h1 span:hover {
    animation: flicker-nav 100ms ease-in-out 5 forwards;
  }

  .inner-fixed-nav h1 span::after {
    opacity: 0 !important;
  }

  @keyframes flicker-nav {
    0%{
     opacity: 0;
    }
    100%{
      opacity:1;
    }
  }
  .footer-instructions {
    opacity: 0;
    transform: translateY(30px);
    animation: footer 1.1s ease-in-out forwards 1 0.3s;
  }

  @keyframes footer {
    0%{
      opacity: 0;
      transform: translateY(30px);
    }
    100%{
      opacity: 1;
      transform: translateY(2px);
    }
  }

    .pointers {
      pointer-events: none;
    }

  .inner-fixed-nav h1 {
    font-size:17px !important;
  }

</style>

